<ul class="nav justify-content-center sticky-top">
  <p class="nav-link">로그인></p>
</ul>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "CJmall / CJ ONE 통합 아이디 6~12자" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호 6자 이상" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-check">
        <%= f.check_box :remember_me ,class: "form-check-input"%>
        <%= f.label :remember_me, '자동로그인', class: "form-check-label"%>
      </div>
    <% end -%>
    <%= f.submit "로그인" , class: "btn btn-primary btn-block"%>
  <% end %>
  <br />
  <p>회원이 아니시라면?</p>
  <%= link_to "회원가입", new_registration_path(resource_name),class: "btn btn-outline-secondary text-dark btn-block" %>
</div>
