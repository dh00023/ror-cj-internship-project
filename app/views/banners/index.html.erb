<div class="container">
  <h6 class="float-right"><span class="badge badge-dark"><%=@banners.first.category.name%></span></h6>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">배너</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @banners.each_with_index do |banner,index| %>
        <tr>
          <th scope="row"><%=index+1%></th>
          <td><%= banner.name %></td>
          <td><%= link_to '보기', banner %></td>
          <td><%= link_to '수정', edit_banner_path(banner) %></td>
          <td><%= link_to '삭제', banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>    
  <%= link_to '새로만들기', new_banner_path , class: "btn btn-outline-secondary text-dark btn-block"%>
</div>
